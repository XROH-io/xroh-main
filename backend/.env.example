# ===========================================
# XROH Backend Environment Variables
# ===========================================

# -----------------
# Application
# -----------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# -----------------
# Database (PostgreSQL)
# -----------------
DATABASE_URL="postgresql://username:password@localhost:5432/xroh_dev?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_NAME=xroh_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------
# Redis (Cache & Queue)
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=default
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# -----------------
# RPC Endpoints - Solana
# -----------------
SOLANA_RPC_MAINNET=https://api.mainnet-beta.solana.com
SOLANA_RPC_DEVNET=https://api.devnet.solana.com
SOLANA_RPC_HELIUS_API_KEY=your_helius_api_key_here
SOLANA_RPC_QUICKNODE_URL=your_quicknode_url_here

# -----------------
# RPC Endpoints - EVM Chains
# -----------------
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key
ETHEREUM_RPC_API_KEY=your_alchemy_api_key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your_api_key
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/your_api_key
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your_api_key

# -----------------
# Swap & Bridge APIs
# -----------------
JUPITER_API=https://lite-api.jup.ag/swap/v1
JUPITER_PRICE_API_URL=https://price.jup.ag/v4
RAYDIUM_API=https://transaction-v1.raydium.io
RAYDIUM_FEE_API=https://api-v3.raydium.io

# -----------------
# Bridge Provider API Keys
# -----------------
LIFI_API_KEY=your_lifi_api_key_here
MAYAN_API_URL=https://price-api.mayan.finance/v3
CHANGENOW_API_KEY=your_changenow_api_key_here

# -----------------
# Price Feed APIs
# -----------------
COINGECKO_API_KEY=your_coingecko_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
JUPITER_PRICE_API_URL=https://price.jup.ag/v4

# -----------------
# AI/LLM APIs
# -----------------
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PRO_TIER=100
RATE_LIMIT_ENTERPRISE_TIER=1000

# -----------------
# Caching Strategy
# -----------------
QUOTE_CACHE_TTL=30
PRICE_CACHE_TTL=30
BALANCE_CACHE_TTL=120
PROVIDER_HEALTH_CACHE_TTL=300

# -----------------
# Queue Configuration
# -----------------
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=5000

# -----------------
# Security
# -----------------
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
API_KEY_SALT=your_random_salt_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=7d

# -----------------
# Monitoring & Analytics
# -----------------
SENTRY_DSN=
PROMETHEUS_ENABLED=false
GRAFANA_URL=

# -----------------
# Feature Flags
# -----------------
ENABLE_AUTO_FAILOVER=true
ENABLE_PORTFOLIO_ANALYSIS=true
ENABLE_AI_EXPLANATIONS=true
ENABLE_WEBSOCKETS=true
